#!/bin/zsh
#vim:ft=zsh

# poor man's *synchronized*
mkdir ~/.bluezconnect.lock || exit 1

   ADDRESS=C8_84_47_02_C7_F4

   BT_ADAPTER=$(dbus-send --print-reply --system --dest=org.bluez / org.bluez.Manager.DefaultAdapter | awk '/object path/ {print $3}')
   dbus-send --print-reply --system --dest=org.bluez ${BT_ADAPTER//\"/}/dev_$ADDRESS org.bluez.AudioSink.Connect

RET=$?
rm -R ~/.bluezconnect.lock && exit $RET
